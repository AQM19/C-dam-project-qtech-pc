<Page x:Class="Q_Tech.Paginas.pgLogros"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Q_Tech.Paginas"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="pgLogros">
    <Page.Resources>
        <ResourceDictionary>
            <Style TargetType="Image" x:Key="imageAchivement">
                <Setter Property="Width" Value="70"/>
                <Setter Property="Height" Value="70"/>
                <Setter Property="Margin" Value="11,0"/>
            </Style>
        </ResourceDictionary>
    </Page.Resources>

    <Grid>
        <ListView x:Name="lvLogros" Background="#88FFFFFF" BorderThickness="0" Padding="10">
            <!--Aqui no se meten las putas serpientes-->
        </ListView>

        <Border CornerRadius="25" Width="35" Height="35" VerticalAlignment="Bottom" HorizontalAlignment="Right" Margin="15" x:Name="AddTerra">
            <Border.Background>
                <ImageBrush ImageSource="/Recursos/Iconos/add.png"/>
            </Border.Background>
        </Border>
    </Grid>
</Page>
